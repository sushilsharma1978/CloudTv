                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:text="RESOLUTION: "
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@android:color/white"
                        />
                    <TextView

                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_resolution"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@android:color/white"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"

                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:text="STANDARD: "
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@android:color/white"
                        />
                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_standard"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@android:color/white"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:text="BITRATE: "
                        android:textSize="@dimen/_12sdp"

                        android:textColor="@android:color/white"
                        />
                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:text="4000 Kbps"
                        android:id="@+id/tv_bitrate"
                        android:textSize="@dimen/_12sdp"

                        android:textColor="@android:color/white"
                        />


                </LinearLayout>


            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"/>
            <RelativeLayout

                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img_logo1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/splash_screennew" />


                <TextView
                    android:id="@+id/txt_all1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/img_logo1"
                    android:text="All Channels"
                    android:textColor="#FFF" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/lay_right1"
                    android:layout_toRightOf="@+id/txt_all1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/box"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="5:4" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/box"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="720*576" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/box"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="SD" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/txt_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:15 PM"
                        android:textColor="#FFF" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/layout_constraint"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll2"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <VideoView
                android:id="@+id/video"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_channel"
                android:visibility="gone"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/channelnew_notavailable"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/txt_chno"
                android:background="@drawable/circle_back"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_back"
                android:background="@drawable/ic_arrow_back_black_24dp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>



    </LinearLayout>

        <TextView
        android:id="@+id/txt_error"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:elevation="@dimen/_10sdp"
